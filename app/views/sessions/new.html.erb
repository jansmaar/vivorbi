<div class="page-header">
<h1>Inloggen</h1>
</div>


<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email, "E-mailadres of gebruikersnaam" %><br />
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password, "Wachtwoord" %><br />
    <%= password_field_tag :password %>
  </p>
  

  <%= submit_tag  "Inloggen", :class => "button button-green" %>
<% end %>