<% content_for :landingpage do %>
	<div class="row">
		<h2 class="text-center">Welkom bij de MetElkaar Applicatie</h2>

				<div class="logo">
				<%= image_tag "logo.png" ,class: "img-responsive logo-landing" ,alt: "logo met elkaar"%>
			</div><!-- end of logo -->
<div class="col-md-6 login">


	
		<h2 class="text-center">Ik ben hier voor het eerst</h2>
			<p class="lead text-left">
			
				Eenvouding sociale contacten opdoen<br /><br />
				Activiteiten ondernemen met bekenden én onbekenden<br /><br />
				Participeren met omringende dorpen<br />
			
			</p>
			<br />
			<br />
					<p class="lead text-center">
		Letop! Na het creëren van uw account moet Vivorbi deze nog activiren alvorens
		u gebruik kunt maken van de mogelijkheden van MetElkaar.  
			</p>
<%= link_to 'Account aanmaken', sign_up_path, class: "button button-green pull-left" %>
<%= link_to 'Contact openemen', sign_up_path, class: "button button-default pull-right" %>



	<!-- INVOERFORMULIER -->



</div>

		<div class="col-md-5  col-md-offset-1 login">
			
			<div class="page-header">
				<h2 class="text-center">Ik ben hier vaker geweest</h2>
					<p class="lead text-center">
				De eerste keer dat u bij MetElkaar wilt inloggen, moet u een account aanmaken.
					</p>
			</div>

			<!-- INVOERFORMULIER -->
			<%= form_tag sessions_path do %>

			<div class="form-group">
				<%= label_tag :email, "E-mailadres of gebruikersnaam" %><br/>
				<%= text_field_tag :email, params[:email], :class => "form-control input-lg", :placeholder => "Druk hier om uw e-mail in te vullen"%>
			</div>

			<div class="form-group">
				<%= label_tag :password, "Wachtwoord" %><br/>
				<%= password_field_tag :password, nil, :class => "form-control input-lg", :placeholder => "Druk hier om uw wachtwoord in te voeren" %>
			</div>

			<!-- INLOGKNOP -->
			<%= submit_tag  "Inloggen", :class => "button button-green button-large" %>

			<label class="checkbox pull-left">
				<input type="checkbox" value="remember-me">Onthoud mij
			</label>
			
			<a href="#" class="pull-right hulp-nodig"><i class="fa fa-question-circle"></i> Wachtwoord vergeten?</a>
		
			<% end %>

		
		</div>
	</div>
<% end %>
