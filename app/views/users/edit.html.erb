<%= form_for @user, :html => { :multipart => true }  do |f| %>

 <%= f.label :email, "E-mail" %>
 <%= f.text_field :email %><br/>
 
 <%= f.label :firstname, "Voornaam" %>
 <%= f.text_field :firstname %><br/>
 
  <%= f.label :lastname, "Achternaam" %>
 <%= f.text_field :lastname %><br/>

  <%= f.label :address, "Adres" %> 
  <%= f.text_field :address %></br>

   <%= f.label :commune, "Gemeente" %> </br>
<%= f.select :commune, options_for_select(["Achtkarspelen", "Ameland","het Bildt", "Dantumadiel", "Dongeradeel", "Ferwerderadiel", "Frankeradeel", "De Friese Meren","Harlingen", "Heerenveen", "Kollumerland en Nieuwkruisland", "Leeuwarden", "Leeuwarderadeel", "Littenseradiel", "Menemeradiel", "Ooststellingwerf", "Opsterland", "Schiermonnikoog", "Smallingerland", "Súdwest-Fryslân", "Terschelling", "Tytsjerksteradiel", "Vlieland", "Westellingwerf"]) %>

    <%= f.label :zip_code, "Postcode" %> 
  <%= f.text_field :zip_code, {:maxlength => 6, :size => 6} %></br>

 <%= f.label :phone_number, "Telefoonnummer" %>
 <%= f.telephone_field :phone_number, {:maxlength => 10, :size => 10} %><br/>

  <%= f.label :date_of_birth, "Geboortedatum" %>
 <%= f.date_select(:date_of_birth, order: [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year) %><br/>

 <%= f.file_field :avatar %><br/>
 
   <%= f.submit 'Aanpassen'%>

 <% end %>