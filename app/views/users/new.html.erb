<% content_for :landingpage do %>
<div class="page-header">
  <h3>Aanmelden</h3>
</div>

<!-- WAAR MOET DEZE?!?!?! -->
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row firstscreen">
  <div class="col-md-6 col-md-offset-3 login">
    <div class="page-header">
      <h3 class="text-center">Persoonlijke gegevens</h3>
      <h4 class="text-center">Dit is stap 1</h4>
    </div>
    <!-- LABELS / INPUT -->
      <div class="form-group">
        <%= f.label :firstname, "Voornaam" %>
        <%= f.text_field :firstname, class: "form-control input-lg errorcheck", :placeholder => "Voer uw voornaam in" %>
      </div>
      
      <div class="form-group">
        <%= f.label :lastname, "Achternaam" %>
        <%= f.text_field :lastname, class: "form-control input-lg errorcheck", :placeholder => "Voer uw achternaam in" %>
      </div> 
      
      <div class="form-group">
        <%= f.label :date_of_birth, "Geboortedatum" %> </br>
        <%= f.date_select(:date_of_birth, order: [:day, :month, :year], :start_year => 1900, :end_year => Time.now.year) %>
      </div>

      <div class="form-group">
          <%= f.label :phone_number, "Telefoon" %>
          <%= f.text_field :phone_number, class: "form-control input-lg errorcheck", :placeholder => "Voer uw telefoonummer in" %>
      </div>

      <!-- VOLGENDE STAP KNOP -->
      <a href="#" class="button button-green button-large firstbutton">Volgende</a>
  </div>
</div>

<div class="row secondscreen">
  <div class="col-md-6 col-md-offset-3 login">
    <div class="page-header">
      <h3 class="text-center">Adres gegevens</h3>
      <h4 class="text-center">Dit is stap 2</h4>
    </div>
    <p>Wij hebben uw <strong>adresgegevens</strong> nodig om u
de best <em>mogelijke</em> sociale koppeling te bieden
binnen uw regio of gemeente.</p>
    <!-- LABELS / INPUT -->
      <div class="form-group">
          <%= f.label :address, "Adres" %>
          <%= f.text_field :address, class: "form-control input-lg errorcheck", :placeholder => "Voer uw adres in" %>
      </div>
      
      <div class="form-group">
          <%= f.label :housenumber, "Huisnummer" %>
          <%= f.text_field :housenumber, class: "form-control input-lg errorcheck", :placeholder => "Voer uw huisnummer in" %>
      </div>

      <div class="form-group">
          <%= f.label :zip_code, "Postcode" %>
          <%= f.text_field :zip_code, class: "form-control input-lg errorcheck", :placeholder => "Voer uw postcode in" %>
      </div>

      <div class="form-group">
          <%= f.label :city, "Woonplaats" %>
          <%= f.text_field :city, class: "form-control input-lg errorcheck", :placeholder =>"Voer uw woonplaats in" %>
      </div>

      <div class="form-group">
        <%= f.label :commune, "Gemeente" %><br/> 
        <%= f.select :commune, ["Achtkarspelen", "Ameland","het Bildt", "Dantumadiel", "Dongeradeel", "Ferwerderadiel", "Frankeradeel", "De Friese Meren","Harlingen", "Heerenveen", "Kollumerland en Nieuwkruisland", "Leeuwarden", "Leeuwarderadeel", "Littenseradiel", "Menemeradiel", "Ooststellingwerf", "Opsterland", "Schiermonnikoog", "Smallingerland", "SÃºdwest-FryslÃ¢n", "Terschelling", "Tytsjerksteradiel", "Vlieland", "Westellingwerf"] %>
      </div>

      <!-- VOLGENDE STAP KNOP -->
      <a href="#" class="button button-default button-large secondbuttonback">Vorige</a>
      <a href="#" class="button button-green button-large secondbutton">Volgende</a>
      
  </div>
</div>

<div class="row thirdscreen">
  <div class="col-md-6 col-md-offset-3 login">
    <div class="page-header">
      <h3 class="text-center">Account gegevens</h3>
      <h4 class="text-center">Dit is stap 3</h4>
    </div>

    <!-- LABELS / INPUT -->
      <div class="form-group">
          <%= f.label :email, "Email" %>
          <%= f.text_field :email, class: "form-control input-lg errorcheck", :placeholder => "Voer uw e-mailadres in" %>
      </div>
      
      <div class="form-group">
          <%= f.label :password, "Wachtwoord" %>
          <%= f.password_field :password, class: "form-control input-lg errorcheck", :placeholder => "Voer een wachtwoord in" %>
      </div>

      <div class="form-group">
          <%= f.label :password_confirmation, "Wachtwoord bevestigen" %>
          <%= f.password_field :password_confirmation, class: "form-control input-lg errorcheck", :placeholder => "Voer uw wachtwoord nogmaals in" %>
      </div>

      <!-- VOLGENDE STAP KNOP -->
      <a href="#" class="button button-default button-large thirdbuttonback">Vorige</a>
      <%= f.submit 'Aanmelden!', class: 'button button-blue button-large'  %>
      
  </div>
</div>


<% end %>
<% end %>